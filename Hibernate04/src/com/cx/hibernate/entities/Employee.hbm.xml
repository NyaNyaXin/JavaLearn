<hibernate-mapping>
	<class name="com.cx.hibernate.entities.Employee" table="GG_EMPLOYEE">
	
		<cache usage="read-write"/> 
		<id name="id" type="java.lang.Integer">
			<column name="ID" />
			<generator class="assigned" />
		</id>
