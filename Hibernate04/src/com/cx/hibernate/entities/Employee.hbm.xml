			<column name="DEPT_ID" />
		</many-to-one>
	</class>

	<!-- 定义命名查询语句 -->
	<query name="salaryEmps">
    	<![CDATA[
    		FROM Employee e WHERE e.salary> :minSal AND e.salary < :maxSal
    	]]>
	</query>
</hibernate-mapping>
